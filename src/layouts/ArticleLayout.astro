<style>
  .article-page {
    padding: var(--sp-lg) 0 var(--sp-xl);
  }

  .article-header {
    padding: var(--sp-lg) 0 var(--sp-md);
    border-bottom: 1px solid var(--border);
    margin-bottom: var(--sp-lg);
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.2rem;
    flex-wrap: wrap;
  }

  .article-title {
    font-family: var(--font-serif);
    font-size: clamp(1.6rem, 4vw, 2.4rem);
    font-weight: 800;
    letter-spacing: 0.04em;
    line-height: 1.35;
    margin-bottom: 1.2rem;
  }

  .article-lead {
    font-family: var(--font-serif);
    font-size: 0.95rem;
    font-weight: 300;
    line-height: 2;
    color: var(--gray-mid);
    border-left: 2px solid var(--gold-light);
    padding-left: 1.2rem;
    max-width: 680px;
    margin-bottom: 1rem;
  }

  .article-body {
    max-width: 720px;
    margin-bottom: var(--sp-lg);
  }

  .affiliate-zone {
    background: var(--sumi);
    padding: var(--sp-lg) var(--sp-lg);
    position: relative;
    overflow: hidden;
    margin: var(--sp-lg) 0;
  }

  .affiliate-zone::before {
    content: "Ë™≠";
    font-family: var(--font-serif);
    font-size: 30rem;
    font-weight: 800;
    color: rgba(200, 169, 110, 0.04);
    position: absolute;
    right: -4rem;
    top: 50%;
    transform: translateY(-50%);
    pointer-events: none;
    line-height: 1;
  }

  .affiliate-heading {
    font-family: var(--font-serif);
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--washi);
    letter-spacing: 0.04em;
    margin: 1rem 0 1.6rem;
    position: relative;
    z-index: 1;
  }

  .book-grid-article {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 1rem;
    position: relative;
    z-index: 1;
    max-width: 720px;
  }

  .article-nav {
    padding-top: var(--sp-md);
    border-top: 1px solid var(--border);
    margin-top: var(--sp-lg);
  }

  .back-link {
    font-family: var(--font-sans);
    font-size: 0.8rem;
    font-weight: 300;
    letter-spacing: 0.15em;
    color: var(--gray-mid);
    text-decoration: none;
    transition: color 0.3s;
  }
  .back-link:hover { color: var(--gold); }
</style>
