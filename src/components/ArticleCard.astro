---
import CategoryBadge from './CategoryBadge.astro';
import Lesson from './Lesson.astro';

interface Props {
  title:       string;
  description: string;
  date:        Date;
  category:    "battle" | "leader" | "strategy" | "books";
  tags:        string[];
  readingTime: number;
  lesson?:     string;
  slug:        string;
}
const { title, description, date, category, tags, readingTime, lesson, slug } = Astro.props;

const formattedDate = date.toLocaleDateString('ja-JP', { year: 'numeric', month: 'short', day: 'numeric' });
---

<article class="article-card">
  <a href={`/blog/${slug}/`} class="card-link" tabindex="-1" aria-hidden="true"></a>
  <div class="card-inner">
    <div class="card-meta">
      <CategoryBadge category={category} />
      <time class="meta-text" datetime={date.toISOString()}>{formattedDate}</time>
      <span class="meta-text read-time">{readingTime} min</span>
    </div>

    <h3 class="card-title">
      <a href={`/blog/${slug}/`}>{title}</a>
    </h3>

    {lesson && <Lesson lesson={lesson} />}

    <p class="card-desc">{description}</p>

    <div class="card-footer">
      {tags.length > 0 && (
        <ul class="tag-list" aria-label="タグ">
          {tags.slice(0, 3).map(tag => <li class="tag">#{tag}</li>)}
        </ul>
      )}
      <span class="card-read-link">続きを読む →</span>
    </div>
  </div>
</article>

<style>
  .article-card {
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 6px;
    position: relative;
    transition: box-shadow 0.25s, transform 0.25s, border-color 0.25s;
    overflow: hidden;
  }
  .article-card:hover {
    box-shadow: 0 6px 24px rgba(15, 39, 68, 0.1);
    transform: translateY(-2px);
    border-color: var(--orange);
  }
  .article-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--orange);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s;
  }
  .article-card:hover::before { transform: scaleX(1); }

  /* invisible full-card link layer */
  .card-link {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .card-inner {
    padding: 1.8rem;
    display: flex;
    flex-direction: column;
    gap: 0.9rem;
    height: 100%;
    position: relative;
    z-index: 1;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .card-title {
    font-family: var(--font-serif);
    font-size: 1.1rem;
    font-weight: 700;
    line-height: 1.55;
  }
  .card-title a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.2s;
  }
  .card-title a:hover { color: var(--orange); }

  .card-desc {
    font-family: var(--font-serif);
    font-size: 0.88rem;
    font-weight: 400;
    line-height: 1.9;
    color: var(--text-mid);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }

  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    margin-top: auto;
    padding-top: 0.8rem;
    border-top: 1px solid var(--border);
  }

  .card-read-link {
    font-family: var(--font-sans);
    font-size: 0.78rem;
    font-weight: 600;
    color: var(--orange);
    letter-spacing: 0.04em;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .read-time {
    margin-left: auto;
  }
</style>
