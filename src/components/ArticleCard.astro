---
import CategoryBadge from './CategoryBadge.astro';
import Lesson from './Lesson.astro';

interface Props {
  title:       string;
  description: string;
  date:        Date;
  category:    "battle" | "leader" | "strategy" | "books";
  tags:        string[];
  readingTime: number;
  lesson?:     string;
  slug:        string;  // e.g. "battle/sekigahara"
}
const { title, description, date, category, tags, readingTime, lesson, slug } = Astro.props;

const formattedDate = date.toLocaleDateString('ja-JP', { year: 'numeric', month: 'short', day: 'numeric' });
---

<article class="article-card">
  <div class="card-inner">
    <div class="card-meta">
      <CategoryBadge category={category} />
      <time class="meta-text" datetime={date.toISOString()}>{formattedDate}</time>
      <span class="meta-text">{readingTime} min</span>
    </div>

    <h3 class="card-title">
      <a href={`/blog/${slug}/`}>{title}</a>
    </h3>

    {lesson && <Lesson lesson={lesson} />}

    <p class="card-desc">{description}</p>

    {tags.length > 0 && (
      <ul class="tag-list" aria-label="タグ" style="margin-top: auto;">
        {tags.slice(0, 3).map(tag => <li class="tag">#{tag}</li>)}
      </ul>
    )}
  </div>
</article>

<style>
  .article-card {
    background: var(--washi);
    position: relative;
    transition: background 0.3s;
  }
  .article-card::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--gold);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s;
  }
  .article-card:hover {
    background: var(--washi-dark);
  }
  .article-card:hover::after {
    transform: scaleX(1);
  }

  .card-inner {
    padding: 2.5rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
    height: 100%;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .card-title {
    font-family: var(--font-serif);
    font-size: 1.1rem;
    font-weight: 600;
    line-height: 1.6;
  }
  .card-title a {
    color: var(--sumi);
    text-decoration: none;
    transition: color 0.3s;
  }
  .card-title a:hover { color: var(--gold); }

  .card-desc {
    font-family: var(--font-serif);
    font-size: 0.85rem;
    font-weight: 300;
    line-height: 1.8;
    color: var(--gray-mid);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }
</style>
