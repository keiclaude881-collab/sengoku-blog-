---
import CategoryBadge from './CategoryBadge.astro';

interface Props {
  title:       string;
  description: string;
  date:        Date;
  category:    "battle" | "leader" | "strategy" | "books";
  tags:        string[];
  readingTime: number;
  lesson?:     string;
  slug:        string;
}
const { title, description, date, category, tags, readingTime, lesson, slug } = Astro.props;

const formattedDate = date.toLocaleDateString('ja-JP', { year: 'numeric', month: 'short', day: 'numeric' });
---

<article class="article-card">
  <div class="card-inner">
    <div class="card-meta">
      <CategoryBadge category={category} />
      <time class="meta-date" datetime={date.toISOString()}>{formattedDate}</time>
    </div>

    <h3 class="card-title">
      <a href={`/blog/${slug}/`}>{title}</a>
    </h3>

    {lesson && (
      <p class="card-lesson">
        <span class="lesson-mark">‚Üí</span>{lesson}
      </p>
    )}

    <p class="card-desc">{description}</p>

    <div class="card-footer">
      <span class="read-time">üìñ {readingTime} min</span>
      <a href={`/blog/${slug}/`} class="read-link">Á∂ö„Åç„ÇíË™≠„ÇÄ ‚Üí</a>
    </div>
  </div>
</article>

<style>
  .article-card {
    background: var(--bg);
    border-radius: 4px;
    overflow: hidden;
    border-top: 3px solid var(--border);
    transition: border-color 0.25s, box-shadow 0.25s, transform 0.25s;
  }
  .article-card:hover {
    border-top-color: var(--orange);
    box-shadow: 0 8px 32px rgba(26, 10, 10, 0.1);
    transform: translateY(-3px);
  }

  .card-inner {
    padding: 1.8rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 100%;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .meta-date {
    font-family: var(--font-sans);
    font-size: 0.73rem;
    color: var(--text-sub);
    letter-spacing: 0.05em;
  }

  .card-title {
    font-family: var(--font-serif);
    font-size: 1.18rem;
    font-weight: 700;
    line-height: 1.55;
    letter-spacing: 0.02em;
  }
  .card-title a {
    color: var(--text);
    text-decoration: none;
    transition: color 0.2s;
  }
  .card-title a:hover { color: var(--orange); }

  .card-lesson {
    font-family: var(--font-sans);
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--orange);
    line-height: 1.6;
    padding: 0.5rem 0.8rem;
    background: rgba(185, 28, 28, 0.06);
    border-radius: 2px;
    display: flex;
    gap: 0.4rem;
    align-items: flex-start;
  }
  .lesson-mark {
    flex-shrink: 0;
    font-weight: 700;
  }

  .card-desc {
    font-family: var(--font-serif);
    font-size: 0.875rem;
    font-weight: 400;
    line-height: 1.9;
    color: var(--text-mid);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }

  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 1rem;
    border-top: 1px solid var(--border);
    margin-top: auto;
  }

  .read-time {
    font-family: var(--font-sans);
    font-size: 0.73rem;
    color: var(--text-sub);
  }

  .read-link {
    font-family: var(--font-sans);
    font-size: 0.8rem;
    font-weight: 700;
    color: var(--orange);
    text-decoration: none;
    letter-spacing: 0.03em;
    transition: gap 0.2s;
  }
</style>
