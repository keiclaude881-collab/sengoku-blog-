---
import CategoryBadge from './CategoryBadge.astro';

interface Props {
  title:       string;
  description: string;
  date:        Date;
  category:    "battle" | "leader" | "strategy" | "books";
  tags:        string[];
  readingTime: number;
  lesson?:     string;
  slug:        string;
}
const { title, description, date, category, tags, readingTime, lesson, slug } = Astro.props;

const formattedDate = date.toLocaleDateString('ja-JP', { year: 'numeric', month: 'short', day: 'numeric' });
---

<article class="article-card">
  <a href={`/blog/${slug}/`} class="card-link" tabindex="-1" aria-hidden="true"></a>
  <div class="card-inner">
    <div class="card-meta">
      <CategoryBadge category={category} />
      <time class="meta-date" datetime={date.toISOString()}>{formattedDate}</time>
    </div>

    <h3 class="card-title">
      <a href={`/blog/${slug}/`}>{title}</a>
    </h3>

    {lesson && (
      <p class="card-lesson">
        <span class="lesson-mark">→</span>{lesson}
      </p>
    )}

    <p class="card-desc">{description}</p>

    <div class="card-footer">
      <span class="read-time">{readingTime} min read</span>
      <span class="read-link">続きを読む →</span>
    </div>
  </div>
</article>

<style>
  .article-card {
    background: var(--bg);
    border: 1px solid var(--rule);
    border-radius: 4px;
    overflow: hidden;
    position: relative;
    transition: border-color 0.25s, box-shadow 0.25s, transform 0.25s, background 0.25s;
  }
  .article-card:hover {
    border-color: var(--ink);
    background: var(--ink);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    transform: translateY(-3px);
  }

  .card-inner {
    padding: 1.8rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 100%;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .meta-date {
    font-family: var(--font-sans);
    font-size: 0.73rem;
    color: var(--ink3);
    letter-spacing: 0.05em;
    transition: color 0.25s;
  }
  .article-card:hover .meta-date { color: rgba(255,255,255,0.4); }

  .card-title {
    font-family: var(--font-serif);
    font-size: 1.1rem;
    font-weight: 700;
    line-height: 1.55;
    letter-spacing: 0.02em;
  }
  .card-title a {
    color: var(--ink);
    text-decoration: none;
    transition: color 0.2s;
  }
  .article-card:hover .card-title a { color: #fff; }

  .card-lesson {
    font-family: var(--font-sans);
    font-size: 0.78rem;
    font-weight: 400;
    color: var(--gold);
    line-height: 1.6;
    display: flex;
    gap: 0.4rem;
    align-items: flex-start;
    transition: color 0.25s;
  }
  .article-card:hover .card-lesson { color: var(--gold-light); }
  .lesson-mark { flex-shrink: 0; }

  .card-desc {
    font-family: var(--font-serif);
    font-size: 0.875rem;
    font-weight: 400;
    line-height: 1.9;
    color: var(--ink2);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
    transition: color 0.25s;
  }
  .article-card:hover .card-desc { color: rgba(255,255,255,0.6); }

  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 1rem;
    border-top: 1px solid var(--rule);
    margin-top: auto;
    transition: border-color 0.25s;
  }
  .article-card:hover .card-footer { border-top-color: rgba(255,255,255,0.1); }

  .read-time {
    font-family: var(--font-sans);
    font-size: 0.72rem;
    color: var(--ink3);
    transition: color 0.25s;
  }
  .article-card:hover .read-time { color: rgba(255,255,255,0.3); }

  .read-link {
    font-family: var(--font-sans);
    font-size: 0.78rem;
    font-weight: 500;
    color: var(--gold);
    letter-spacing: 0.03em;
    transition: color 0.25s;
  }
  .article-card:hover .read-link { color: var(--gold-light); }
</style>
