---
import CategoryBadge from './CategoryBadge.astro';
import Lesson from './Lesson.astro';

interface Props {
  title:       string;
  description: string;
  date:        Date;
  category:    "battle" | "leader" | "strategy" | "books";
  tags:        string[];
  readingTime: number;
  lesson?:     string;
  slug:        string;
}
const { title, description, date, category, tags, readingTime, lesson, slug } = Astro.props;
const formattedDate = date.toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' });
---

<article class="featured">
  <div class="featured-label-bar">
    <span class="featured-badge">★ FEATURED</span>
  </div>

  <div class="featured-body">
    <div class="featured-content">
      <div class="featured-meta">
        <CategoryBadge category={category} />
        <time class="featured-date" datetime={date.toISOString()}>{formattedDate}</time>
        <span class="featured-time">{readingTime} min read</span>
      </div>

      <h2 class="featured-title">
        <a href={`/blog/${slug}/`}>{title}</a>
      </h2>

      {lesson && <Lesson lesson={lesson} />}

      <p class="featured-desc">{description}</p>

      {tags.length > 0 && (
        <ul class="tag-list" aria-label="タグ">
          {tags.map(tag => <li class="tag">#{tag}</li>)}
        </ul>
      )}

      <a href={`/blog/${slug}/`} class="featured-cta">
        記事全文を読む <span aria-hidden="true">→</span>
      </a>
    </div>

    <div class="featured-deco" aria-hidden="true">
      <span class="deco-num">01</span>
      <span class="deco-char">戦</span>
    </div>
  </div>
</article>

<style>
  .featured {
    background: var(--bg-navy);
    border-radius: 6px;
    overflow: hidden;
    margin-bottom: 1.5rem;
  }

  .featured-label-bar {
    background: var(--orange);
    padding: 0.4rem 1.8rem;
  }
  .featured-badge {
    font-family: var(--font-sans);
    font-size: 0.65rem;
    font-weight: 700;
    letter-spacing: 0.25em;
    color: #fff;
  }

  .featured-body {
    display: grid;
    grid-template-columns: 1fr 200px;
    position: relative;
  }

  .featured-content {
    padding: 2.8rem 2.4rem;
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    position: relative;
    z-index: 1;
  }

  .featured-meta {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    flex-wrap: wrap;
  }
  .featured-date, .featured-time {
    font-family: var(--font-sans);
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
  }

  .featured-title {
    font-family: var(--font-serif);
    font-size: clamp(1.4rem, 3vw, 2rem);
    font-weight: 700;
    line-height: 1.4;
    letter-spacing: 0.03em;
  }
  .featured-title a {
    color: #fff;
    text-decoration: none;
    transition: color 0.2s;
  }
  .featured-title a:hover { color: var(--orange); }

  .featured-desc {
    font-family: var(--font-serif);
    font-size: 0.9rem;
    font-weight: 400;
    line-height: 1.95;
    color: rgba(255, 255, 255, 0.78);
    max-width: 540px;
  }

  .featured-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.8rem;
    background: var(--orange);
    color: #fff;
    font-family: var(--font-sans);
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    border-radius: 3px;
    text-decoration: none;
    align-self: flex-start;
    margin-top: 0.5rem;
    transition: background 0.2s;
  }
  .featured-cta:hover { background: var(--orange-dark); }

  /* tag/lesson overrides for dark bg */
  .featured :global(.tag) {
    color: rgba(255, 255, 255, 0.55);
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(255, 255, 255, 0.15);
  }
  .featured :global(.lesson-box) {
    background: rgba(212, 160, 23, 0.12);
    border-color: var(--amber);
  }
  .featured :global(.lesson-text) {
    color: rgba(255, 255, 255, 0.75);
  }

  /* 装飾 */
  .featured-deco {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }
  .deco-num {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    font-family: var(--font-sans);
    font-size: 0.65rem;
    font-weight: 700;
    letter-spacing: 0.2em;
    color: rgba(185, 28, 28, 0.4);
  }
  .deco-char {
    font-family: var(--font-serif);
    font-size: 14rem;
    font-weight: 800;
    color: rgba(185, 28, 28, 0.08);
    line-height: 1;
    user-select: none;
  }

  @media (max-width: 768px) {
    .featured-body { grid-template-columns: 1fr; }
    .featured-deco { display: none; }
    .featured-content { padding: 2rem 1.6rem; }
  }
</style>
