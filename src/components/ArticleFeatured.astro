---
import CategoryBadge from './CategoryBadge.astro';

interface Props {
  title:       string;
  description: string;
  date:        Date;
  category:    "battle" | "leader" | "strategy" | "books";
  tags:        string[];
  readingTime: number;
  lesson?:     string;
  slug:        string;
}
const { title, description, date, category, tags, readingTime, lesson, slug } = Astro.props;
const formattedDate = date.toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' });
---

<article class="featured">
  <div class="featured-label">
    <span class="label-text">PICK UP</span>
  </div>

  <div class="featured-body">
    <div class="featured-content">
      <div class="featured-meta">
        <CategoryBadge category={category} />
        <time datetime={date.toISOString()}>{formattedDate}</time>
        <span>üìñ {readingTime} min read</span>
      </div>

      <h2 class="featured-title">
        <a href={`/blog/${slug}/`}>{title}</a>
      </h2>

      {lesson && (
        <div class="featured-lesson">
          <span class="featured-lesson-label">„Åì„ÅÆË®ò‰∫ã„ÅßÂ≠¶„Åπ„Çã„Åì„Å®</span>
          <p>{lesson}</p>
        </div>
      )}

      <p class="featured-desc">{description}</p>

      <a href={`/blog/${slug}/`} class="featured-cta">
        ÂÖ®Êñá„ÇíË™≠„ÇÄ <span class="cta-arrow">‚Üí</span>
      </a>
    </div>

    <div class="featured-side" aria-hidden="true">
      <span class="side-char">Êà¶</span>
    </div>
  </div>
</article>

<style>
  .featured {
    background: var(--bg-navy);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 1.5rem;
    position: relative;
  }

  .featured-label {
    background: var(--orange);
    padding: 0.45rem 1.6rem;
    display: inline-block;
  }
  .label-text {
    font-family: var(--font-sans);
    font-size: 0.62rem;
    font-weight: 700;
    letter-spacing: 0.3em;
    color: #fff;
  }

  .featured-body {
    display: grid;
    grid-template-columns: 1fr 220px;
  }

  .featured-content {
    padding: 2.8rem 2.6rem;
    display: flex;
    flex-direction: column;
    gap: 1.4rem;
  }

  .featured-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    font-family: var(--font-sans);
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.45);
  }

  .featured-title {
    font-family: var(--font-serif);
    font-size: clamp(1.5rem, 3vw, 2.2rem);
    font-weight: 800;
    line-height: 1.35;
    letter-spacing: 0.02em;
  }
  .featured-title a {
    color: #fff;
    text-decoration: none;
    transition: color 0.2s;
  }
  .featured-title a:hover { color: var(--orange); }

  .featured-lesson {
    background: rgba(185, 28, 28, 0.15);
    border-left: 3px solid var(--orange);
    padding: 1rem 1.2rem;
    border-radius: 0 2px 2px 0;
  }
  .featured-lesson-label {
    display: block;
    font-family: var(--font-sans);
    font-size: 0.68rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    color: var(--orange);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
  }
  .featured-lesson p {
    font-family: var(--font-serif);
    font-size: 0.9rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
  }

  .featured-desc {
    font-family: var(--font-serif);
    font-size: 0.92rem;
    line-height: 2;
    color: rgba(255, 255, 255, 0.65);
    max-width: 520px;
  }

  .featured-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.85rem 2rem;
    background: var(--orange);
    color: #fff;
    font-family: var(--font-sans);
    font-size: 0.88rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    border-radius: 2px;
    text-decoration: none;
    align-self: flex-start;
    transition: background 0.2s, gap 0.2s;
  }
  .featured-cta:hover {
    background: var(--orange-dark);
    gap: 0.9rem;
  }
  .cta-arrow { transition: transform 0.2s; }
  .featured-cta:hover .cta-arrow { transform: translateX(3px); }

  /* Âè≥Ë£ÖÈ£æ */
  .featured-side {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    background: rgba(185, 28, 28, 0.04);
  }
  .side-char {
    font-family: var(--font-serif);
    font-size: 15rem;
    font-weight: 800;
    color: rgba(185, 28, 28, 0.1);
    line-height: 1;
    user-select: none;
  }

  @media (max-width: 768px) {
    .featured-body { grid-template-columns: 1fr; }
    .featured-side { display: none; }
    .featured-content { padding: 2rem 1.6rem; }
  }
</style>
