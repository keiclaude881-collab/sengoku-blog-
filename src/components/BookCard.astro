---
interface Props {
  title:  string;
  asin:   string;
  reason: string;
  image?: string;
}
const { title, asin, reason, image } = Astro.props;
const associateId = import.meta.env.AMAZON_ASSOCIATE_ID ?? 'sengoku-blog-22';
const affiliateUrl = `https://www.amazon.co.jp/dp/${asin}/?tag=${associateId}`;

// 書影がない場合のプレースホルダー漢字（ASINの末尾1文字で選択）
const placeholderChars = ['兵', '謀', '戦', '策', '智', '将', '武', '覇', '道', '義'];
const placeholder = placeholderChars[parseInt(asin.slice(-1), 10)] ?? '書';
---

<div class="book-card">
  <a
    href={affiliateUrl}
    target="_blank"
    rel="nofollow sponsored noopener"
    class="book-link"
    aria-label={`${title} - Amazonで見る`}
  >
    <div class="book-cover">
      {image
        ? <img src={image} alt={title} width="120" height="180" loading="lazy" />
        : <span class="cover-placeholder" aria-hidden="true">{placeholder}</span>
      }
    </div>

    <div class="book-info">
      <p class="book-title">{title}</p>
      <p class="book-reason">{reason}</p>
      <span class="book-cta">
        Amazonで見る <span class="cta-arrow" aria-hidden="true">→</span>
      </span>
    </div>
  </a>
</div>

<style>
  .book-card {
    background: rgba(245, 240, 232, 0.04);
    border: 1px solid rgba(200, 169, 110, 0.15);
    transition: border-color 0.3s, transform 0.3s;
  }
  .book-card:hover {
    border-color: rgba(200, 169, 110, 0.4);
    transform: translateY(-3px);
  }

  .book-link {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.4rem;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .book-cover {
    aspect-ratio: 2/3;
    background: rgba(44, 36, 22, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  .book-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .cover-placeholder {
    font-family: var(--font-serif);
    font-size: 3rem;
    font-weight: 800;
    color: rgba(200, 169, 110, 0.3);
    user-select: none;
  }

  .book-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex: 1;
  }

  .book-title {
    font-family: var(--font-serif);
    font-size: 0.85rem;
    font-weight: 600;
    line-height: 1.5;
    color: var(--washi);
  }

  .book-reason {
    font-family: var(--font-sans);
    font-size: 0.78rem;
    font-weight: 400;
    line-height: 1.7;
    color: rgba(245, 240, 232, 0.82);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }

  .book-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-family: var(--font-sans);
    font-size: 0.72rem;
    font-weight: 300;
    letter-spacing: 0.15em;
    color: var(--gold);
    margin-top: auto;
  }
  .cta-arrow {
    transition: transform 0.3s;
    display: inline-block;
  }
  .book-card:hover .cta-arrow {
    transform: translateX(4px);
  }
</style>
