---
interface Props {
  title:  string;
  asin:   string;
  reason: string;
  image?: string;
}
const { title, asin, reason, image } = Astro.props;
const associateId = import.meta.env.AMAZON_ASSOCIATE_ID ?? 'sengoku-blog-22';
const affiliateUrl = `https://www.amazon.co.jp/dp/${asin}/?tag=${associateId}`;

const placeholderChars = ['兵', '謀', '戦', '策', '智', '将', '武', '覇', '道', '義'];
const placeholder = placeholderChars[parseInt(asin.slice(-1), 10)] ?? '書';
---

<div class="book-card">
  <a
    href={affiliateUrl}
    target="_blank"
    rel="nofollow sponsored noopener"
    class="book-link"
    aria-label={`${title} - Amazonで見る`}
  >
    <div class="book-cover">
      {image
        ? <img src={image} alt={title} width="120" height="180" loading="lazy" />
        : <span class="cover-placeholder" aria-hidden="true">{placeholder}</span>
      }
    </div>

    <div class="book-info">
      <p class="book-title">{title}</p>
      <p class="book-reason">{reason}</p>
      <span class="book-cta">
        <span class="cta-text">Amazonで見る</span>
        <span class="cta-arrow" aria-hidden="true">→</span>
      </span>
    </div>
  </a>
</div>

<style>
  .book-card {
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 6px;
    transition: border-color 0.25s, transform 0.25s, box-shadow 0.25s;
    overflow: hidden;
  }
  .book-card:hover {
    border-color: var(--orange);
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.25);
  }

  .book-link {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.2rem;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .book-cover {
    aspect-ratio: 2/3;
    background: rgba(255, 255, 255, 0.05);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border-radius: 3px;
  }
  .book-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .cover-placeholder {
    font-family: var(--font-serif);
    font-size: 3rem;
    font-weight: 800;
    color: rgba(185, 28, 28, 0.35);
    user-select: none;
  }

  .book-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex: 1;
  }

  .book-title {
    font-family: var(--font-serif);
    font-size: 0.85rem;
    font-weight: 600;
    line-height: 1.55;
    color: #fff;
  }

  .book-reason {
    font-family: var(--font-sans);
    font-size: 0.78rem;
    font-weight: 400;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.65);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }

  .book-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.4rem;
    width: 100%;
    padding: 0.55rem 0;
    background: var(--orange);
    border-radius: 3px;
    font-family: var(--font-sans);
    font-size: 0.75rem;
    font-weight: 600;
    color: #fff;
    letter-spacing: 0.05em;
    margin-top: auto;
    transition: background 0.2s;
  }
  .book-card:hover .book-cta {
    background: var(--orange-dark);
  }
  .cta-arrow {
    transition: transform 0.2s;
    display: inline-block;
  }
  .book-card:hover .cta-arrow {
    transform: translateX(3px);
  }
</style>
