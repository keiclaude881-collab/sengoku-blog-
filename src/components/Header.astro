---
const navLinks = [
  { label: '記事一覧',     href: '/blog/' },
  { label: '合戦と戦略',   href: '/category/battle/' },
  { label: '武将の思想',   href: '/category/leader/' },
  { label: '兵法・現代応用', href: '/category/strategy/' },
  { label: '書籍レビュー', href: '/category/books/' },
];

const currentPath = Astro.url.pathname;
---

<header class="site-header">
  <div class="container header-inner">
    <a href="/" class="site-logo" aria-label="戦略の系譜 トップへ">
      <span class="logo-text">戦略の<em>系譜</em></span>
    </a>

    <nav class="site-nav" aria-label="メインナビゲーション">
      <ul class="nav-list">
        {navLinks.map(({ label, href }) => (
          <li>
            <a
              href={href}
              class:list={['nav-link', { active: currentPath.startsWith(href) }]}
              aria-current={currentPath.startsWith(href) ? 'page' : undefined}
            >
              {label}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <a href="/blog/" class="header-cta">記事を読む</a>
  </div>
</header>

<style>
  .site-header {
    background: var(--bg);
    border-bottom: 1px solid var(--rule);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    height: var(--nav-height);
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    gap: 2rem;
  }

  .site-logo {
    display: inline-block;
    text-decoration: none;
    flex-shrink: 0;
  }

  .logo-text {
    font-family: var(--font-serif);
    font-size: 1.15rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    color: var(--ink);
  }
  .logo-text em {
    font-style: normal;
    color: var(--gold);
  }

  .site-nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .nav-list {
    list-style: none;
    display: flex;
    gap: 0.2rem;
  }

  .nav-link {
    display: block;
    color: var(--ink2);
    font-family: var(--font-sans);
    font-size: 0.82rem;
    font-weight: 400;
    letter-spacing: 0.03em;
    padding: 0.4em 0.75em;
    border-radius: 2px;
    text-decoration: none;
    transition: color 0.15s;
    white-space: nowrap;
  }
  .nav-link:hover { color: var(--ink); }
  .nav-link.active { color: var(--gold); font-weight: 500; }

  .header-cta {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1.4rem;
    background: var(--ink);
    color: #fff;
    font-family: var(--font-sans);
    font-size: 0.78rem;
    font-weight: 500;
    letter-spacing: 0.08em;
    border-radius: 2px;
    text-decoration: none;
    transition: background 0.2s;
    flex-shrink: 0;
    white-space: nowrap;
  }
  .header-cta:hover { background: var(--accent); }

  @media (max-width: 900px) {
    .site-nav { display: none; }
  }

  @media (max-width: 480px) {
    .header-cta { display: none; }
  }
</style>
