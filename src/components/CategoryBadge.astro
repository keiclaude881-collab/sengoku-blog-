---
interface Props {
  category: "battle" | "leader" | "strategy" | "books" | "media";
}
const { category } = Astro.props;

const map = {
  battle:   { label: "合戦と戦略",     href: "/category/battle/" },
  leader:   { label: "武将の思想",     href: "/category/leader/" },
  strategy: { label: "兵法・現代応用", href: "/category/strategy/" },
  books:    { label: "書籍レビュー",   href: "/category/books/" },
  media:    { label: "映像・音声",     href: "/category/media/" },
};
const { label, href } = map[category];
---

<a href={href} class="category-badge" data-cat={category}>
  {label}
</a>

<style>
  .category-badge {
    display: inline-flex;
    align-items: center;
    font-family: var(--font-sans);
    font-size: 0.65rem;
    font-weight: 700;
    letter-spacing: 0.14em;
    padding: 0.2em 0.75em;
    border-radius: 2px;
    color: var(--gold);
    background: transparent;
    border: 1px solid var(--gold-light);
    text-transform: uppercase;
    text-decoration: none;
    transition: background 0.2s, border-color 0.2s, color 0.2s;
    white-space: nowrap;
  }
  .category-badge:hover {
    background: var(--gold);
    border-color: var(--gold);
    color: #fff;
  }
</style>
